-- Script GUI by Jar.x
-- Simple Menu: Speed, Jump, Teleport

local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Jar.x Hub",
   LoadingTitle = "Jar.x Script",
   LoadingSubtitle = "Loading Script...",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "JarHub",
      FileName = "ConfigJar"
   }
})

-- MENU UTAMA (Hanya 1 Tab)
local Tab = Window:CreateTab("Main Menu", 4483362458)

-- 1. FITUR SPEED
Tab:CreateToggle({
   Name = "Super Speed",
   CurrentValue = false,
   Flag = "SpeedToggle",
   Callback = function(Value)
       if Value then
           game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 100
           Rayfield:Notify({Title = "Jar.x", Content = "Speed ON!", Duration = 2})
       else
           game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 16
           Rayfield:Notify({Title = "Jar.x", Content = "Speed OFF", Duration = 2})
       end
   end
})

-- 2. FITUR JUMP
Tab:CreateToggle({
   Name = "High Jump",
   CurrentValue = false,
   Flag = "JumpToggle",
   Callback = function(Value)
       if Value then
           game.Players.LocalPlayer.Character.Humanoid.JumpPower = 200
           Rayfield:Notify({Title = "Jar.x", Content = "Jump ON!", Duration = 2})
       else
           game.Players.LocalPlayer.Character.Humanoid.JumpPower = 50
           Rayfield:Notify({Title = "Jar.x", Content = "Jump OFF", Duration = 2})
       end
   end
})

-- 3. FITUR TELEPORT
local TargetPlayer = ""

-- Dropdown Pilih Orang
Tab:CreateDropdown({
   Name = "Select Player",
   Options = {},
   CurrentOption = "",
   Flag = "SelectPlayer",
   Callback = function(Option)
       TargetPlayer = Option
   end
})

-- Tombol Refresh Daftar Orang
Tab:CreateButton({
   Name = "Refresh Player List",
   Callback = function()
       local players = {}
       for i, v in pairs(game.Players:GetPlayers()) do
           if v.Name ~= game.Players.LocalPlayer.Name then
               table.insert(players, v.Name)
           end
       end
       Rayfield:Notify({Title = "Jar.x", Content = "List Updated!", Duration = 2})
   end
})

-- Tombol Teleport
Tab:CreateButton({
   Name = "TELEPORT TO PLAYER",
   Callback = function()
       local target = game.Players:FindFirstChild(TargetPlayer)
       local me = game.Players.LocalPlayer

       if target and target.Character and target.Character:FindFirstChild("HumanoidRootPart") then
           if me.Character and me.Character:FindFirstChild("HumanoidRootPart") then
               me.Character.HumanoidRootPart.CFrame = target.Character.HumanoidRootPart.CFrame
               Rayfield:Notify({Title = "Jar.x", Content = "Teleport Success!", Duration = 2})
           end
       else
           Rayfield:Notify({Title = "Error", Content = "Player Not Found!", Duration = 2})
       end
   end
})

Rayfield:LoadConfiguration()
